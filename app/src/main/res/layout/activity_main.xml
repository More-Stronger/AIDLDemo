<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_start_photo_service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="start_photo_service"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_get_photos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="get_photos"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_start_photo_service" />

    <Button
        android:id="@+id/btn_add_photos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="add_photos"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_get_photos" />

    <Button
        android:id="@+id/btn_clear_photos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="clear_photos"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_add_photos" />
</androidx.constraintlayout.widget.ConstraintLayout>